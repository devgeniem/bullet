{
  "name": "ts-test",
  "version": "0.0.1",
  "description": "A simple test project for creating a RESTful web api with sane architecture using Node.js, TypeScript and Express.js",
  "main": "./src/server.ts",
  "scripts": {
    "test": "echo \"Tests have not been setup yet!\" && exit 0",
    "compile": "tsc",
    "prerun": "npm run compile",
    "run": "node ./build/server.js",
