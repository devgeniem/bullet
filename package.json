  "keywords": [
    "node",
    "express",
    "typescript",
    "web-api"
  ],
  "author": "Topi Latva-Salo",
  "license": "MIT",
  "dependencies": {
    "express": "^4.16.4",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@types/node": "^10.12.10",
    "npm-run-all": "^4.1.5",
    "tsc-watch": "^1.0.31",
    "typescript": "^3.1.6"
  }
}
